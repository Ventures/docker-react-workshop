{
  "env": {
    "browser": true
  },

  "extends": "airbnb",

  "rules": {
    "no-unused-vars":    0,
    "no-nested-ternary": 0,
    "react/sort-comp":   0,

    "semi":                   [ 2, "never" ],
    "react/prefer-es6-class": [ 2, "never" ],

    "key-spacing": [2, {
      "align": "value"
    }],

    "no-multi-spaces": [2, {
      "exceptions": {
        "ImportDeclaration":    true,
        "VariableDeclarator":   true,
        "AssignmentExpression": true
      }
    }]
  }
}
